<p id="notice"><%= notice %></p>

<p>
  <strong>Name:</strong>
  <%= @room.name %>
</p>

<p>
  <strong>Description:</strong>
  <%= @room.description %>
</p>

<h2>Reservations</h2>

<table>
  <thead>
    <tr>
      <th>Team</th>
      <th>From</th>
      <th>Until</th>
      <th></th>
      <th></th>
      <th></th>
    </tr>
  </thead>

  <tbody>
    <% @room.reservations.each do |reservation| %>
      <tr>
        <td><%= link_to reservation.team.name, reservation.team %></td>
        <td><%= reservation.from.to_s(:short) %></td>
        <td><%= reservation.until.to_s(:short) %></td>
        <td><%= link_to 'Show', reservation %></td>
        <td><%= link_to 'Edit', edit_reservation_path(reservation) %></td>
        <td><%= link_to 'Destroy', reservation, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

